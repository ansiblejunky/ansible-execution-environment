# Ansible Execution Environment - Environment Variables
# Copy this file to .env and update with your values

# Container Engine Configuration
CONTAINER_ENGINE=podman     # Options: podman, docker
TARGET_TAG=latest
TARGET_NAME=ansible-ee-minimal
TARGET_HUB=quay.io/your-org

# Ansible Automation Hub Authentication
ANSIBLE_HUB_TOKEN=your-hub-token-here


# registry.redhat.io Authentication
REGISTRY_USERNAME=
REGISTRY_PASSWORD=

# Quay.io Authentication
QUAY_USERNAME=
QUAY_PASSWORD=

# Custom Python Package Repository (Optional)
PIP_INDEX_URL=https://pypi.org/simple

# AAP 2.5 Integration Testing
AAP_URL=https://your-aap-controller.example.com
AAP_USERNAME=your-username
AAP_PASSWORD=your-password
AAP_VERIFY_SSL=false        # Options: true, false 

# Token Refresh Configuration
TOKEN_REFRESH_THRESHOLD=86400  # 24 hours in seconds
TOKEN_REFRESH_URL=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token 